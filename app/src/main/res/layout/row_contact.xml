<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvContact"
    style="@style/CardViewOption"
    android:layout_marginBottom="@dimen/control_SpecingXS"
    android:layout_marginTop="@dimen/control_SpecingXS"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/ivContactImage"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:padding="@dimen/control_SpecingTiny"
                android:layout_gravity="center"
                app:srcCompat="@drawable/account_navigation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_marginStart="@dimen/control_SpecingSmall"
                android:layout_marginTop="@dimen/control_SpecingTiny"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/control_SpecingXS"
                    android:layout_marginEnd="@dimen/control_SpecingTiny"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:layout_marginTop="@dimen/control_SpecingTiny">

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtContactName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Piyush Dobariya"
                        android:textColor="@color/amber_500"
                        android:textSize="16sp" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/control_SpecingSmall"
                        android:background="@drawable/admin_border"
                        android:padding="1dp"
                        android:text=" Admin "
                        android:visibility="gone"
                        android:textColor="#8BC34A"
                        android:textSize="12sp" />

                </RelativeLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/txtContactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/control_SpecingTiny"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:layout_marginTop="@dimen/control_SpecingXS"
                    android:textColor="@color/offwhite"
                    android:text="9874561321"
                    android:textSize="12sp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/control_SpecingTiny"
                    android:textColor="#64B5F6"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:layout_marginTop="@dimen/control_SpecingXS"
                    android:text="mym@gmail.com"
                    android:textSize="12sp" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txtProfession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_400"
                    android:layout_marginEnd="@dimen/control_SpecingTiny"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:layout_marginTop="@dimen/control_SpecingXS"
                    android:text="self-employed"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMemberRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_SpecingTiny"
            android:orientation="horizontal">

            <!--<View-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1.5"/>-->
            <com.rey.material.widget.Button
                android:id="@+id/btnCancle"
                style="@style/ButtonRequest"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="@string/detail_decline" />

            <com.rey.material.widget.Button
                android:id="@+id/btnAccept"
                style="@style/ButtonRequestApproved"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="@string/detail_approve" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>