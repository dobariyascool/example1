<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flForgotPasswrod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_img"
    android:clickable="true"
    tools:context="com.arraybit.mym.ForgotPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <com.rey.material.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EnterValidEmail"/>

            <com.rey.material.widget.EditText
                android:id="@+id/etEmail"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/control_SpecingSmall"
                android:focusableInTouchMode="true"
                android:hint="Registered Email"
                android:inputType="textEmailAddress" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtWrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"/>

        </LinearLayout>

        <com.rey.material.widget.Button
            android:id="@+id/btnVerification"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_Height"
            android:text="Send Mail"
            android:textSize="@dimen/control_TextMedium" />
    </LinearLayout>

</FrameLayout>
